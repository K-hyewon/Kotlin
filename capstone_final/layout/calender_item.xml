<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/dayText"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:text="1"
        android:textColor="#FF757575"
        android:textSize="18sp"
        android:gravity="top"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:translationY="10dp">

        <ImageView
            android:id="@+id/redIcon"
            android:visibility="invisible"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_red"
            android:layout_gravity="left">
        </ImageView>

        <ImageView
            android:id="@+id/blackIcon"
            android:visibility="invisible"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_black"
            android:layout_gravity="right">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:translationY="10dp">

        <ImageView
            android:id="@+id/yellowIcon"
            android:visibility="invisible"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/icon_yellow">
        </ImageView>

        <ImageView
            android:id="@+id/blueIcon"
            android:visibility="invisible"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_blue"
            android:layout_gravity="right">
        </ImageView>

    </LinearLayout>




</LinearLayout>